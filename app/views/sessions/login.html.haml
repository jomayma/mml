  - if @user
    %p.welcome  
      Welcome, #{@user.name}!
      %h1
        Welcome, #{@user.name}!
      %small
        = "@#{@user.screen_name}"
    - unless @user.description.blank?
      %h6
        = @user.description
    = link_to 'Log Out', logout_path
  - else
    %p.login= link_to 'Log in with your Twitter account', "/auth/twitter"
